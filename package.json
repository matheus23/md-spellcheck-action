{
  "name": "md-spellcheck-action",
  "version": "4.2.2",
  "private": false,
  "description": "Spellcheck markdown files in your github action",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt && cp ./node_modules/dictionary-en/index.dic ./dist/index.dic && cp ./node_modules/dictionary-en/index.aff ./dist/index.aff",
    "test": "jest",
    "all": "yarn build && yarn format && yarn lint && yarn package && yarn test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matheus23/md-spellcheck-action.git"
  },
  "keywords": [
    "github",
    "actions",
    "spellcheck",
    "spellchecking",
    "markdown"
  ],
  "author": "Philipp Kr√ºger @matheus23, philipp.krueger1@gmail.com",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/glob": "^0.3.0",
    "@yozora/parser-gfm-ex": "^2.0.2-alpha.0",
    "@yozora/tokenizer-inline-math": "^2.0.2-alpha.0",
    "@yozora/tokenizer-math": "^2.0.2-alpha.0",
    "dictionary-en": "^3.2.0",
    "fast-check": "^3.7.0",
    "hunspell-asm": "^4.0.2"
  },
  "devDependencies": {
    "@typescript-eslint/parser": "^5.59.7",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.22.0",
    "eslint-plugin-github": "^4.3.2",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^28.1.3",
    "js-yaml": "^4.1.0",
    "prettier": "2.8.4",
    "ts-jest": "^28.0.8",
    "typescript": "^4.4.4"
  }
}
